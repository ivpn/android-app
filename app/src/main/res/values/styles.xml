<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/AppTheme.EditTextStyle</item>
        <!--<item name="textColorError"> @color/colorAccent </item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.HalfTransparent" parent="AppTheme.Transparent">
        <item name="android:windowBackground">@color/color_opacity_black_background</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.CheckBox">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">#6626394d</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFFFF</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButton</item>
    </style>

    <style name="AppTheme.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:textColor">#26394D</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogMessageStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#6B8299</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AlertDialogButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">#398fe6</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AuthBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">@dimen/sign_in_side_margin</item>
        <item name="android:layout_marginRight">@dimen/sign_in_side_margin</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="IVPNLogo">
        <item name="android:layout_width">@dimen/auth_logo_width</item>
        <item name="android:layout_height">@dimen/auth_logo_height</item>
        <item name="android:src">@drawable/ic_ivpn_logo_no_margin</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#6126394d</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="AppTheme.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">#b4c1cc</item>
        <item name="android:textAppearance">@style/AppTheme.RadioButton.TextAppearance</item>
    </style>

    <style name="AppTheme.Button" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="colorButtonNormal">#98A5B3</item>
    </style>

    <style name="AppTheme.RadioButton.TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:textColor">#335266</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.TimePicker">
        <item name="android:textColor">#335266</item>
    </style>

    <style name="SubscriptionPlanTitle">
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#334D66</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:background">#26398FE6</item>
    </style>
    
    <style name="SubscriptionCurrentPlan">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#98A5B3</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="SubscriptionPlanAdvantage">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#334D66</item>
    </style>
    
    <style name="SubscriptionPlanTrial">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#98A5B3</item>
    </style>

    <style name="SubscriptionPlanPrice">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#26394D</item>
    </style>

    <style name="EditTextEmailTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_private_email_passive</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextInputLayoutAppTheme" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE initState -->
        <item name="android:textColorHint">#6126394d</item>
        <!-- Label color in TRUE initState and bar color FALSE and TRUE InitState -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">#6126394d</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="SettingsSectionTitle">
        <item name="android:layout_marginLeft">@dimen/settings_margin_left</item>
        <item name="android:layout_marginRight">@dimen/settings_margin_right</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/settings_section_title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SettingsOptionTitle">
        <item name="android:textSize">@dimen/settings_option_title_text_size</item>
        <item name="android:textColor">@color/settings_option_title_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingsOptionDescription">
        <item name="android:textSize">@dimen/settings_option_description_text_size</item>
        <item name="android:textColor">@color/settings_option_description_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingsAction">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="colorAccent">@color/primary</item> <!-- Whatever color you want-->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.SwitchCompat">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AppTheme.MultiHopText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.ServerHintText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/sliding_panel_text_color</item>
    </style>

    <style name="AppTheme.ServerNameText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/sliding_panel_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="sliding_panel_card_text_value">
        <item name="android:textColor">@color/sliding_panel_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sliding_panel_card_text_title">
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@color/sliding_panel_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/dialogue_background</item>
        <item name="android:windowTitleStyle">@style/AppTheme.DialogTitleStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.AlertDialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.AlertDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppTheme.AlertDialogButton</item>
    </style>

    <style name="AppTheme.DialogTitleStyle">
        <item name="android:textColor">@color/dialogue_title</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.AlertDialogButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/dialogue_button</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>

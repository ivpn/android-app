<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="net.ivpn.client.vpn.Protocol" />

        <import type="net.ivpn.client.common.utils.DateUtil" />

        <variable
            name="viewmodel"
            type="net.ivpn.client.ui.protocol.ProtocolViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/SettingsSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/protocol_settings" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_section_height"
                android:gravity="center_vertical"
                android:minHeight="64dp"
                android:orientation="horizontal"
                android:paddingTop="14dp"
                android:paddingBottom="14dp">

                <TextView
                    style="@style/SettingsOptionTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/settings_margin_left"
                    android:layout_weight="1"
                    android:text="@string/settings_port_label" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/openvpn_spinner"
                    style="@style/Platform.Widget.AppCompat.Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#98a5b3"
                    android:gravity="center_vertical"
                    android:minWidth="130dp"
                    android:overlapAnchor="true"
                    android:popupBackground="@android:color/white"
                    android:spinnerMode="dropdown"
                    android:visibility="@{viewmodel.protocol.equals(Protocol.WIREGUARD) ? View.GONE : View.VISIBLE}"
                    app:onChanged="@{viewmodel.onPortChangedListener}"
                    app:onTouch="@{viewmodel.portsTouchListener}"
                    app:selectedItem="@{viewmodel.openVPNPort}" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/wg_spinner"
                    style="@style/Platform.Widget.AppCompat.Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#98a5b3"
                    android:gravity="center_vertical"
                    android:minWidth="130dp"
                    android:overlapAnchor="true"
                    android:popupBackground="@android:color/white"
                    android:spinnerMode="dropdown"
                    android:visibility="@{viewmodel.protocol.equals(Protocol.WIREGUARD) ? View.VISIBLE : View.GONE}"
                    app:onChanged="@{viewmodel.onPortChangedListener}"
                    app:onTouch="@{viewmodel.portsTouchListener}"
                    app:selectedItem="@{viewmodel.wireGuardPort}" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:background="@color/color_section_divider"
                android:visibility="@{viewmodel.protocol.equals(Protocol.WIREGUARD) ? View.VISIBLE : View.GONE}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="@{viewmodel.protocol.equals(Protocol.WIREGUARD) ? View.VISIBLE : View.GONE}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/settings_margin_left"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/SettingsOptionTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/protocol_wg_regeneration_period" />

                        <TextView
                            style="@style/SettingsOptionDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="@{DateUtil.formatRegenerationPeriod(viewmodel.regenerationPeriod)}"
                            android:textAlignment="viewStart" />
                    </LinearLayout>

                    <!--<TextView-->
                    <!--style="@style/SettingsOptionDescription"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="protocol_wg_regeneration_description"-->
                    <!--android:layout_marginStart="@dimen/settings_margin_left"-->
                    <!--android:layout_marginEnd="@dimen/settings_margin_left" />-->

                    <net.ivpn.client.ui.protocol.view.ValueSelectionView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:listener="@{viewmodel.listener}"
                        app:value="@{viewmodel.regenerationPeriod}" />

                </LinearLayout>

                <TextView
                    style="@style/SettingsOptionDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/settings_margin_left"
                    android:layout_marginEnd="@dimen/settings_margin_left"
                    android:text="@string/protocol_wg_regeneration_description" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:background="@color/color_section_divider"
                android:visibility="@{viewmodel.protocol.equals(Protocol.WIREGUARD) ? View.VISIBLE : View.GONE}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_section_height"
                android:layout_marginStart="@dimen/settings_margin_left"
                android:layout_marginEnd="@dimen/settings_margin_right"
                android:gravity="center_vertical|start"
                android:orientation="horizontal"
                android:visibility="@{viewmodel.protocol.equals(Protocol.WIREGUARD) ? View.VISIBLE : View.GONE}">

                <TextView
                    style="@style/SettingsAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="wgDetails"
                    android:text="@string/protocol_wg_details"
                    android:textAllCaps="true" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
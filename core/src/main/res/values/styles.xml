<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:textColorPrimary">@color/colorControlNormal</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="popupWindowStyle">@style/AppTheme.Popup</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.DialogNoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Transparent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColorPrimary">@color/dialogue_title</item>
        <item name="android:textColorSecondary">@color/dialogue_title</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.CheckBox">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorSecondary">@color/disabled</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dialogue_background</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButton</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:textColor">@color/dialogue_title</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="DialogMessageStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/dialogue_text</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/custom_dns_text_color</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Search">
        <item name="android:editTextColor">@color/servers_text_color</item>
        <item name="android:textColorHint">@color/servers_text_color_hint</item>
        <item name="android:textSize">15sp</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:tint">@color/servers_icon_color</item>
    </style>

    <style name="AppTheme.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">#b4c1cc</item>
        <item name="android:textAppearance">@style/AppTheme.RadioButton.TextAppearance</item>
    </style>

    <style name="AppTheme.Button" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="colorButtonNormal">#98A5B3</item>
    </style>

    <style name="AppTheme.RadioButton.TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:textColor">#335266</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.TimePicker" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="AppTheme.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">#1F398FE6</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="strokeColor">@color/account_outlined_button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/account_outlined_button_text</item>
    </style>

    <style name="SubscriptionPlanTitle">
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#334D66</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:background">#26398FE6</item>
    </style>

    <style name="SubscriptionCurrentPlan">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#98A5B3</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SubscriptionPlanAdvantage">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#334D66</item>
    </style>

    <style name="SubscriptionPlanTrial">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#98A5B3</item>
    </style>

    <style name="SubscriptionPlanPrice">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#26394D</item>
    </style>

    <style name="TextInputLayoutAppTheme">
        <item name="colorOnSurface">@color/login_color_on_surface</item>
    </style>

    <style name="AppTheme.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
<!--        <item name="expandedHintEnabled">true</item>-->
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="AppTheme.HintText" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsSectionTitle">
        <item name="android:layout_marginLeft">@dimen/settings_margin_left</item>
        <item name="android:layout_marginRight">@dimen/settings_margin_right</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/settings_section_title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SettingsOptionTitle">
        <item name="android:textSize">@dimen/settings_option_title_text_size</item>
        <item name="android:textColor">@color/settings_option_title_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingsOptionDescription">
        <item name="android:textSize">@dimen/settings_option_description_text_size</item>
        <item name="android:textColor">@color/settings_option_description_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingsAction">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="colorAccent">@color/primary</item> <!-- Whatever color you want-->
    </style>

    <style name="AppTheme.SwitchCompat">
    </style>

    <style name="AppTheme.MultiHopText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.ServerHintText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/sliding_panel_text_color</item>
    </style>

    <style name="AppTheme.ServerNameText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/sliding_panel_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.ConnectionInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/sliding_panel_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="sliding_panel_card_text_title">
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@color/sliding_panel_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/dialogue_background</item>
        <item name="android:windowTitleStyle">@style/AppTheme.DialogTitleStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.AlertDialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.AlertDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppTheme.AlertDialogButton</item>
    </style>

    <style name="AppTheme.Popup" parent="Widget.AppCompat.PopupWindow">
        <item name="android:popupBackground">@drawable/popup_background</item>
    </style>

    <style name="AppTheme.DialogTitleStyle">
        <item name="android:textColor">@color/dialogue_title</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.AlertDialogButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/dialogue_button</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>

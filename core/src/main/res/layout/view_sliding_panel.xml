<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="antitracker"
            type="net.ivpn.core.v2.viewmodel.AntiTrackerViewModel" />

        <variable
            name="multihop"
            type="net.ivpn.core.v2.viewmodel.MultiHopViewModel" />

        <variable
            name="servers"
            type="net.ivpn.core.v2.viewmodel.ServersViewModel" />

        <variable
            name="protocol"
            type="net.ivpn.core.v2.viewmodel.ProtocolViewModel" />

        <variable
            name="network"
            type="net.ivpn.core.v2.network.NetworkViewModel" />

        <variable
            name="connect"
            type="net.ivpn.core.v2.viewmodel.ConnectionViewModel" />

        <variable
            name="fastestServer"
            type="net.ivpn.core.rest.data.model.Server" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:behavior_fitToContents="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slider_background">

            <View
                android:id="@+id/view"
                android:layout_width="40dp"
                android:layout_height="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/drag_view_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/bottom_sheet"
            style="?attr/bottomSheetStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/sliding_panel_background"
            android:overScrollMode="never">

            <LinearLayout
                android:id="@+id/shown_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:descendantFocusability="blocksDescendants">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/sliding_panel_background">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:letterSpacing="-0.02"
                        android:text="@string/your_status_is"
                        android:textColor="@color/sliding_panel_text_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="16dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="16dp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.01"
                        android:text="@{connect.connectionStatus}"
                        android:textColor="@color/sliding_panel_text_color"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch1"
                        android:layout_width="74dp"
                        android:layout_height="36dp"
                        android:checked="@{connect.isProtected}"
                        android:elevation="2dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView2"
                        app:layout_constraintEnd_toStartOf="@+id/guideline2"
                        app:layout_constraintTop_toTopOf="@+id/textView"
                        app:layout_constraintVertical_bias="0.5"
                        app:onTouch="@{connect.touchListener}"
                        app:connectionState="@{connect.connectionState}"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/pause_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="@{connect.isPauseAvailable() ? View.VISIBLE : View.GONE}"
                        app:backgroundTint="@color/connect_fab_background"
                        app:elevation="2dp"
                        app:fabSize="mini"
                        app:layout_constraintBottom_toBottomOf="@+id/textView2"
                        app:layout_constraintEnd_toStartOf="@+id/switch1"
                        app:layout_constraintTop_toTopOf="@+id/textView"
                        app:srcCompat="@drawable/ic_pause"
                        app:tint="@color/sliding_panel_icon" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/resume_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="@{connect.isPaused() ? View.VISIBLE : View.GONE}"
                        app:backgroundTint="@color/connect_fab_background"
                        app:elevation="2dp"
                        app:fabSize="mini"
                        app:layout_constraintBottom_toBottomOf="@+id/textView2"
                        app:layout_constraintEnd_toStartOf="@+id/switch1"
                        app:layout_constraintTop_toTopOf="@+id/textView"
                        app:srcCompat="@drawable/ic_play"
                        app:tint="@color/sliding_panel_icon" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/sliding_panel_line_color"
                        android:visibility="@{multihop.isSupported()? View.VISIBLE : View.INVISIBLE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="206dp"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="@{multihop.isSupported()? View.VISIBLE : View.GONE}">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:onClick="@{() -> multihop.enableMultiHop(false)}">

                        <TextView
                            style="@style/AppTheme.MultiHopText"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:text="@string/single_hop"
                            app:isBold="@{!multihop.isEnabled()}"
                            android:textColor="@{multihop.isEnabled()? @color/sliding_panel_multi_hop_passive : @color/sliding_panel_multi_hop_active}" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:onClick="@{() -> multihop.enableMultiHop(true)}">

                        <TextView
                            android:id="@+id/textView4"
                            style="@style/AppTheme.MultiHopText"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:text="@string/multi_hop"
                            app:isBold="@{multihop.isEnabled()}"
                            android:textColor="@{multihop.isEnabled() ? @color/sliding_panel_multi_hop_active : @color/sliding_panel_multi_hop_passive}" />


                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/sliding_panel_line_color" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/entry_random_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/slider_layout_server_layout_height"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="@{servers.entryRandomServer ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="parent"
                        tools:layout_editor_absoluteX="4dp">

                        <TextView
                            android:id="@+id/connect_to_entry_random"
                            style="@style/AppTheme.ServerHintText"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="@{multihop.isEnabled() ? connect.entryServerConnectionHint : connect.serverConnectionHint}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/entry_random_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:contentDescription="@string/content_description_entry_server_flag"
                            android:src="@drawable/ic_shuffle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/connect_to_entry_random"
                            app:tint="@color/settings_option_description_text" />

                        <TextView
                            android:id="@+id/entry_random_label"
                            style="@style/AppTheme.ServerNameText"
                            android:layout_marginStart="8dp"
                            android:text="@string/connect_random_server"
                            app:layout_constraintBottom_toBottomOf="@+id/entry_random_image"
                            app:layout_constraintStart_toEndOf="@+id/entry_random_image"
                            app:layout_constraintTop_toTopOf="@+id/entry_random_image" />

                        <ImageView
                            android:id="@+id/entry_random_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/content_description_choose_entry_server"
                            app:layout_constraintBottom_toBottomOf="@+id/entry_random_image"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/connect_to_entry_random"
                            app:srcCompat="@drawable/ic_arrow_right"
                            app:tint="@color/sliding_panel_arrow" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fastest_server_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/slider_layout_server_layout_height"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="@{servers.fastestServerSetting ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="parent"
                        tools:layout_editor_absoluteX="4dp">

                        <TextView
                            android:id="@+id/fastest_server_hint"
                            style="@style/AppTheme.ServerHintText"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="@{multihop.isEnabled() ? connect.entryServerConnectionHint : connect.fastestServerConnectionHint}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/fastest_server_flag"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:contentDescription="@string/content_description_entry_server_flag"
                            android:src="@{fastestServer}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/fastest_server_hint" />

                        <TextView
                            android:id="@+id/fastest_server_name"
                            style="@style/AppTheme.ServerNameText"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="2dp"
                            android:text="@{fastestServer.description}"
                            app:layout_constraintBottom_toBottomOf="@+id/fastest_server_flag"
                            app:layout_constraintStart_toEndOf="@+id/fastest_server_flag"
                            app:layout_constraintTop_toTopOf="@+id/fastest_server_flag" />

                        <ImageView
                            android:id="@+id/fastest_server_action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/content_description_choose_entry_server"
                            app:layout_constraintBottom_toBottomOf="@+id/fastest_server_flag"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/fastest_server_hint"
                            app:srcCompat="@drawable/ic_arrow_right"
                            app:tint="@color/sliding_panel_arrow" />

                        <TextView
                            android:id="@+id/fastest_ipv6_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/ipv6_text_background"
                            android:paddingHorizontal="4dp"
                            android:paddingVertical="2dp"
                            android:text="IPv6"
                            android:visibility="@{servers.isFastestServerIPv6BadgeEnabled() ? View.VISIBLE : View.GONE}"
                            android:textColor="@color/servers_text_color"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/fastest_server_name"
                            app:layout_constraintStart_toEndOf="@+id/fastest_server_name"
                            app:layout_constraintTop_toTopOf="@+id/fastest_server_name" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/enter_server_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/slider_layout_server_layout_height"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="@{servers.entryServerVisibility ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="parent"
                        tools:layout_editor_absoluteX="4dp">

                        <TextView
                            android:id="@+id/textView5"
                            style="@style/AppTheme.ServerHintText"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="@{multihop.isEnabled() ? connect.entryServerConnectionHint : connect.serverConnectionHint}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:contentDescription="@string/content_description_entry_server_flag"
                            android:src="@{servers.entryServer}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView5" />

                        <TextView
                            android:id="@+id/textView6"
                            style="@style/AppTheme.ServerNameText"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="2dp"
                            android:text="@{servers.entryServer.description}"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView"
                            app:layout_constraintStart_toEndOf="@+id/imageView"
                            app:layout_constraintTop_toTopOf="@+id/imageView" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/content_description_choose_entry_server"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView5"
                            app:srcCompat="@drawable/ic_arrow_right"
                            app:tint="@color/sliding_panel_arrow" />

                        <TextView
                            android:id="@+id/entry_ipv6_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/ipv6_text_background"
                            android:paddingHorizontal="4dp"
                            android:paddingVertical="2dp"
                            android:text="IPv6"
                            android:visibility="@{servers.isEntryServerIPv6BadgeEnabled() ? View.VISIBLE : View.GONE}"
                            android:textColor="@color/servers_text_color"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView6"
                            app:layout_constraintStart_toEndOf="@+id/textView6"
                            app:layout_constraintTop_toTopOf="@+id/textView6" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="@{multihop.isEnabled() ? View.VISIBLE : View.GONE}">

                    <View
                        android:id="@+id/exit_server_top_line"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/sliding_panel_line_color" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/exit_server_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/slider_layout_server_layout_height"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="@{servers.exitServerVisibility ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@id/enter_server_layout"
                        tools:layout_editor_absoluteX="4dp">

                        <TextView
                            android:id="@+id/exit_server_hint"
                            style="@style/AppTheme.ServerHintText"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="@{connect.exitServerConnectionHint}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/exit_server_flag"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:contentDescription="@string/content_description_entry_server_flag"
                            android:src="@{servers.exitServer}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/exit_server_hint" />

                        <TextView
                            android:id="@+id/exit_server_description"
                            style="@style/AppTheme.ServerNameText"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="2dp"
                            android:text="@{servers.exitServer.description}"
                            app:layout_constraintBottom_toBottomOf="@+id/exit_server_flag"
                            app:layout_constraintStart_toEndOf="@+id/exit_server_flag"
                            app:layout_constraintTop_toTopOf="@+id/exit_server_flag" />

                        <ImageView
                            android:id="@+id/exit_server_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/content_description_choose_entry_server"
                            app:layout_constraintBottom_toBottomOf="@+id/exit_server_flag"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/exit_server_hint"
                            app:srcCompat="@drawable/ic_arrow_right"
                            app:tint="@color/sliding_panel_arrow" />

                        <TextView
                            android:id="@+id/exit_ipv6_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/ipv6_text_background"
                            android:paddingHorizontal="4dp"
                            android:paddingVertical="2dp"
                            android:visibility="@{servers.isExitServerIPv6BadgeEnabled() ? View.VISIBLE : View.GONE}"
                            android:text="IPv6"
                            android:textColor="@color/servers_text_color"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/exit_server_description"
                            app:layout_constraintStart_toEndOf="@+id/exit_server_description"
                            app:layout_constraintTop_toTopOf="@+id/exit_server_description" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/exit_random_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/slider_layout_server_layout_height"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="@{servers.exitRandomServer ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="parent"
                        tools:layout_editor_absoluteX="4dp">

                        <TextView
                            android:id="@+id/connect_to_exit_random"
                            style="@style/AppTheme.ServerHintText"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="@{connect.exitServerConnectionHint}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/exit_random_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:contentDescription="@string/content_description_entry_server_flag"
                            android:src="@drawable/ic_shuffle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/connect_to_exit_random"
                            app:tint="@color/settings_option_description_text" />

                        <TextView
                            android:id="@+id/exit_random_label"
                            style="@style/AppTheme.ServerNameText"
                            android:layout_marginStart="8dp"
                            android:text="@string/connect_random_server"
                            app:layout_constraintBottom_toBottomOf="@+id/exit_random_image"
                            app:layout_constraintStart_toEndOf="@+id/exit_random_image"
                            app:layout_constraintTop_toTopOf="@+id/exit_random_image" />

                        <ImageView
                            android:id="@+id/exit_random_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/content_description_choose_entry_server"
                            app:layout_constraintBottom_toBottomOf="@+id/exit_random_image"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/connect_to_exit_random"
                            app:srcCompat="@drawable/ic_arrow_right"
                            app:tint="@color/sliding_panel_arrow" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/sliding_panel_line_color"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/antitracker_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <View
                        android:id="@+id/sepation_line"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/sliding_panel_line_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/antitracker_description" />

                    <TextView
                        android:id="@+id/antitracker_title"
                        style="@style/AppTheme.ServerNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/sliding_panel_antitracker"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/antitracker_switch"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginEnd="16dp"
                        android:checked="@{antitracker.isAntiSurveillanceEnabled}"
                        android:theme="@style/AppTheme.SwitchCompat"
                        app:antitrackerState="@{antitracker.state}"
                        app:layout_constraintBottom_toBottomOf="@+id/antitracker_description"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/antitracker_title"
                        app:onChanged="@{antitracker.enableAntiSurveillance}" />

                    <TextView
                        android:id="@+id/antitracker_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.5"
                        android:letterSpacing="-0.02"
                        android:text="@{antitracker.antiTrackerDescription}"
                        android:textColor="@color/sliding_panel_text_color"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/antitracker_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/network_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="@{network.isNetworkFeatureEnabled? View.VISIBLE : View.GONE}">

                    <TextView
                        android:id="@+id/wifi_ssid"
                        style="@style/AppTheme.ServerNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="@{network.networkTitle}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/wifi_label" />

                    <TextView
                        android:id="@+id/wifi_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:alpha="0.5"
                        android:letterSpacing="-0.02"
                        android:text="@string/sliding_panel_wifi_title"
                        android:textColor="@color/sliding_panel_text_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/wifi_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintBottom_toBottomOf="@+id/wifi_ssid"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/wifi_label"
                        app:srcCompat="@drawable/ic_arrow_right"
                        app:tint="@color/sliding_panel_arrow" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/sliding_panel_line_color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/wifi_ssid" />

                    <TextView
                        android:id="@+id/network_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:letterSpacing="0.1"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="3dp"
                        android:text="@{network.networkState}"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:visibility="@{network.networkState == null ? View.GONE : View.VISIBLE}"
                        app:background="@{network.networkState.backgroundId}"
                        app:layout_constraintBottom_toBottomOf="@+id/wifi_arrow"
                        app:layout_constraintEnd_toStartOf="@+id/wifi_arrow"
                        app:layout_constraintTop_toTopOf="@+id/wifi_arrow" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/protocol_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <View
                        android:id="@+id/view5"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/sliding_panel_line_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/protocol_port" />

                    <TextView
                        android:id="@+id/protocol_port"
                        style="@style/AppTheme.ServerNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="@{multihop.isEnabled() ? protocol.descriptionMultihop : protocol.description}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/protocol_port_label" />

                    <TextView
                        android:id="@+id/protocol_port_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:alpha="0.5"
                        android:letterSpacing="-0.02"
                        android:text="@string/sliding_panel_protocol_port_name"
                        android:textColor="@color/sliding_panel_text_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/protocol_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintBottom_toBottomOf="@+id/protocol_port"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/protocol_port_label"
                        app:srcCompat="@drawable/ic_arrow_right"
                        app:tint="@color/sliding_panel_arrow" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <include
                    android:id="@+id/cards"
                    layout="@layout/view_sliding_panel_cards" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>